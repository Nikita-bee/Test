#                                 Задача 1
def calculate_rectangle_area(длина,ширина):
    return длина * ширина
def main():
    print('Вычислить площадь молекулы')
    длина=float("Введи длину молекулы")
    ширина=float('Введи ширину молекулы')
    area=calculate_rectangle_area((длина,ширина)
print(f'Площадь молекулы:{area:.2f} квадратных нанометров')
if _name_ = "_main_":
    main()
